@model  List<PetGrooming.Models.Species>
@{
    ViewBag.Title = "Add";
}

<h2>Add a New Pet</h2>

<form method="POST" action="/Pet/Add">
    <!-- TODO: format this nicely -->
    <div style="margin-bottom:20px;">
        <span style="margin-right:20px;">Name:</span>
        <input id="PetName" type="text" name="PetName" />
    </div>
    <div style="margin-bottom:20px;">
        <span style="margin-right:6px;">Species:</span>
        <select id="SpeciesID" type="text" name="SpeciesID">
            @{ 
                //A rendering loop for presenting a list of species
                //The pet should be one of these species
                foreach(var species in Model)
                {
                    <option value="@species.SpeciesID">@species.Name</option>

                }
            }
        </select>
    </div>
    <div style="margin-bottom:20px;">
        <span>Weight:</span>
        <input style="margin-left:12px;" id="PetWeight" type="text" name="PetWeight" />KG</div>
    <div style="margin-bottom:20px;">
    <span>Color:</span><input style="margin-left:23px;" id="PetColor" type="text" name="PetColor" /></div>
    <div style="margin-bottom:20px;">Notes:
    <span><textarea id="PetNotes" style="margin-left:15px;" name="PetNotes"></textarea></span></div>
    <div style="margin-top:20px;">
    <input type="submit" value="Add Pet" />
        </div>
</form>
